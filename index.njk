{% set css %}
  {% include "style.css" %}
{% endset %}

<style>
  {{ css | cssmin | safe }}
</style>

<head>
  <title>Media-diet</title>
</head>

{% include "header.njk" %}

<main>

  <h2>Books</h2>

  <div class="grid">
  {% for item in collections.books %}
      <article class="item">
        <img src="https://covers.openlibrary.org/b/isbn/{{ item.data.isbn }}-L.jpg" alt="{{ item.data.title}} book cover" />
        <div>
          <h3>{{ item.data.title }}</h2>
          <h4>by {{ item.data.author }}</h3>
          <ul>
            <li>{{ item.data.tag }}</li>
            <li>{{ item.data.format }}</li>
            <li>{{ item.data.publishYear }}</li>
          </ul>
        </div>
      </article>
  {% endfor %}
  </div>

  <h2>Games</h2>

    {% for item in collections.games %}
      <article class="item">
        <img src="https://covers.openlibrary.org/b/isbn/{{ item.data.isbn }}-L.jpg" alt="{{ item.data.title}} book cover" />
        <h3>{{ item.data.title }}</h2>
        <h4>{{ item.data.platform }}</h3>
      </article>
  {% endfor %}

  <h2>Series</h2>

    {% for item in collections.series %}
      <article class="item">
        <img src="https://covers.openlibrary.org/b/isbn/{{ item.data.isbn }}-L.jpg" alt="{{ item.data.title}} book cover" />
        <h3>{{ item.data.title }}</h2>
        <h4>{{ item.data.platform }}</h3>
      </article>
    {% endfor %}

  <h2>Movies</h2>

    {% for item in collections.movies %}
      <article class="item">
        <img src="https://covers.openlibrary.org/b/isbn/{{ item.data.isbn }}-L.jpg" alt="{{ item.data.title}} book cover" />
        <h3>{{ item.data.title }}</h2>
        <h4>{{ item.data.platform }}</h3>
      </article>
    {% endfor %}    
</main>